<%- include('header')%>

<div class="container my-5">
  <h1 class="title has-text-centered"><%= genre.name %></h1>
  <div class="is-flex is-justify-content-center">
    <figure class="image is-128x128">
      <img src="/<%= genre.image %>" alt="Placeholder image" />
    </figure>
  </div>

  <% if(movie){ %>
  <div class="columns my-5">
    <% movie.map(val =>{ %>
    <div class="column is-one-third">
      <a href="<%= val.url %>">
        <div class="card">
          <header class="card-header is-flex is-justify-content-center">
            <div class="card-image has-text-centered my-2">
              <figure class="image is-128x128">
                <img
                  class="image is-128x128"
                  src="/<%= val.image %>"
                  alt="Placeholder image"
                />
              </figure>
            </div>
          </header>
          <div class="card-content">
            <strong class="title is-4 has-text-centered"
              ><%= val.name %></strong
            >
            <hr />
            <div class="content">
              <%= val.description %>
              <br />
              <hr />
              <p class="subtitle">Price: <%= val.price %>$</p>
            </div>
          </div>
        </div>
      </a>
    </div>
    <% }) %>
  </div>
  <% } else { %>
  <p class="subtitle my-5">Movies not found in this category.</p>
  <% } %>
</div>

<%- include('footer')%>
